// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("POSTGRES_URL_NON_POOLING")
}

// User model - minimal for Discord OAuth
model User {
  id        String   @id @default(cuid())
  email     String?  @unique
  name      String?
  image     String?
  emailVerified DateTime?
  role      Role     @default(user)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  accounts Account[]
  sessions Session[]
  places   Place[]
  portals  Portal[]

  @@map("users")
}

// Account model - stores Discord OAuth connection
model Account {
  id                String  @id @default(cuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

// Session model - manages NextAuth sessions
model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model Place {
  uid           String    @id @default(cuid())
  slug          String    @unique @map("slug")
  name          String
  world         World
  coordX        Int       @map("coord_x")
  coordY        Int       @map("coord_y")
  coordZ        Int       @map("coord_z")
  description   String?
  imageUrl      String?   @map("image_url")
  tags          String[]  @default([])
  ownerNames    String[]  @default([]) @map("owner_names")
  discordUrl    String?   @map("discord_url")
  status        ApprovalStatus @default(pending)
  createdById   String    @map("created_by")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  creator       User      @relation(fields: [createdById], references: [id])
  tradeOffers   TradeOffer[]

  @@map("places")
}

model TradeOffer {
  uid         String   @id @default(cuid())
  placeUid    String   @map("place_uid")
  negotiable  Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  place       Place    @relation(fields: [placeUid], references: [uid])
  items       TradeItem[]

  @@map("trade_offers")
}

model Portal {
  uid                  String   @id @default(cuid())
  slug                 String   @map("slug")
  name                 String
  world                World
  coordX               Int      @map("coord_x")
  coordY               Int      @map("coord_y")
  coordZ               Int      @map("coord_z")
  description          String?
  address              String?
  ownerNames           String[] @default([]) @map("owner_names")
  status               ApprovalStatus @default(pending)
  createdById          String   @map("created_by")
  createdAt            DateTime @default(now()) @map("created_at")
  updatedAt            DateTime @updatedAt @map("updated_at")

  creator      User    @relation(fields: [createdById], references: [id])

  @@map("portals")
  @@unique([slug, world])
}

enum World {
  overworld
  nether
}

enum ApprovalStatus {
  pending
  approved
  rejected
}

enum Role {
  user
  admin
}

model TradeItem {
  uid         String         @id @default(cuid())
  offerUid    String         @map("offer_uid")
  kind        TradeItemType
  itemId      String         @map("item_id")
  quantity    Int
  enchanted   Boolean        @default(false)
  customName  String?        @map("custom_name")
  createdAt   DateTime       @default(now()) @map("created_at")
  updatedAt   DateTime       @updatedAt @map("updated_at")
  offer       TradeOffer     @relation(fields: [offerUid], references: [uid])

  @@map("trade_items")
}

enum TradeItemType {
  gives
  wants
}
