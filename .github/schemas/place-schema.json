{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PMC Plan Place Schema",
  "description": "Schema for validating place data in the PMC Plan project",
  "required": ["id", "name", "world", "coordinates", "trade"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$",
      "minLength": 1,
      "maxLength": 50,
      "description": "Unique identifier for the place (lowercase, underscore-separated)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Display name of the place"
    },
    "world": {
      "type": "string",
      "enum": ["overworld", "nether"],
      "description": "The world where this place is located"
    },
    "coordinates": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": {
          "type": "number",
          "description": "X coordinate"
        },
        "y": {
          "type": "number",
          "description": "Y coordinate"
        },
        "z": {
          "type": "number",
          "description": "Z coordinate"
        }
      },
      "additionalProperties": false
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^[a-z0-9_-]+$",
        "minLength": 1,
        "maxLength": 30
      },
      "uniqueItems": true,
      "maxItems": 10,
      "description": "Array of tags to categorize the place"
    },
    "description": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 500,
      "description": "Optional description of the place"
    },
    "discord": {
      "type": ["string", "null"],
      "pattern": "^https://discord\\.gg/[a-zA-Z0-9]+$",
      "minLength": 1,
      "maxLength": 200,
      "description": "Optional Discord server URL for this place"
    },
    "owner": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 16,
      "pattern": "^[a-zA-Z0-9_]+$",
      "description": "Minecraft username of the player who owns this place"
    },
    "trade": {
      "type": ["array", "null"],
      "items": {
        "type": "object",
        "required": ["gives", "wants"],
        "properties": {
          "gives": {
            "type": "object",
            "required": ["item_id", "quantity", "enchanted"],
            "properties": {
              "custom_name": {
                "type": ["string", "null"],
                "minLength": 1,
                "maxLength": 100,
                "description": "Custom name for the item"
              },
              "item_id": {
                "type": "string",
                "pattern": "^[a-z0-9_:]+$",
                "minLength": 1,
                "maxLength": 50,
                "description": "Minecraft item ID (e.g., 'diamond', 'minecraft:emerald')"
              },
              "quantity": {
                "type": "integer",
                "minimum": 1,
                "maximum": 64,
                "description": "Quantity of the item"
              },
              "enchanted": {
                "type": "boolean",
                "description": "Whether the item is enchanted"
              },
              "lore": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 100
                },
                "maxItems": 10,
                "description": "Optional lore/description lines for the item"
              }
            },
            "additionalProperties": false
          },
          "wants": {
            "type": "object",
            "required": ["item_id", "quantity", "enchanted"],
            "properties": {
              "custom_name": {
                "type": ["string", "null"],
                "minLength": 1,
                "maxLength": 100,
                "description": "Custom name for the item"
              },
              "item_id": {
                "type": "string",
                "pattern": "^[a-z0-9_:]+$",
                "minLength": 1,
                "maxLength": 50,
                "description": "Minecraft item ID (e.g., 'diamond', 'minecraft:emerald')"
              },
              "quantity": {
                "type": "integer",
                "minimum": 1,
                "maximum": 64,
                "description": "Quantity of the item"
              },
              "enchanted": {
                "type": "boolean",
                "description": "Whether the item is enchanted"
              },
              "lore": {
                "type": "array",
                "items": {
                  "type": "string",
                  "minLength": 1,
                  "maxLength": 100
                },
                "maxItems": 10,
                "description": "Optional lore/description lines for the item"
              }
            },
            "additionalProperties": false
          },
          "stock": {
            "type": ["integer", "null"],
            "minimum": 0,
            "description": "Available stock for this trade (optional)"
          },
          "active": {
            "type": "boolean",
            "default": true,
            "description": "Whether this trade offer is active"
          }
        },
        "additionalProperties": false
      },
      "maxItems": 20,
      "description": "List of trade offers available at this place (null if no trades)"
    }
  },
  "additionalProperties": false
}