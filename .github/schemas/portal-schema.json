{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "PMC Plan Portal Schema",
  "description": "Schema for validating portal data in the PMC Plan project",
  "required": ["id", "name", "world", "coordinates"],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1,
      "maxLength": 50,
      "pattern": "^[a-z0-9_]+$",
      "description": "Unique identifier for the portal (lowercase, underscores only)"
    },
    "name": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Display name of the portal"
    },
    "world": {
      "type": "string",
      "enum": ["overworld", "nether"],
      "description": "The world where this portal is located"
    },
    "coordinates": {
      "type": "object",
      "required": ["x", "y", "z"],
      "properties": {
        "x": {
          "type": "number",
          "description": "X coordinate"
        },
        "y": {
          "type": "number",
          "description": "Y coordinate"
        },
        "z": {
          "type": "number",
          "description": "Z coordinate"
        }
      },
      "additionalProperties": false
    },
    "description": {
      "type": ["string", "null"],
      "minLength": 1,
      "maxLength": 500,
      "description": "Optional description of the portal"
    }
  },
  "additionalProperties": false
}